/*
 *  Swatches
 */

.swatch {
  margin-bottom: 12px;
}
.swatch.color-swatches {
  max-width: 190px !important;
}
/* Label */
.swatch .header {
  margin: 0.5em 0;
}
/* Hide radio buttons.*/
.swatch input[type="radio"] {
  display:none;
}
.swatch-element label {
  /* Rounded corners */
  -webkit-border-radius:4px;
  -moz-border-radius:4px;
  border-radius:4px;
  /* To give width and height */
  float:left;
  /* Color swatches contain no text so they need to have a width. */
  height:35px;
  /* No extra spacing between them */
  margin:0;
  /* The border when the button is not selected */
  border: 1px solid $color-primary;
  /* Background color */
  background-color: transparent;
  /* Styling text */
  font-size:13px;
  text-align:center;
  line-height:35px;
  white-space:nowrap;
}
.swatch--collection .swatch-element label {
  height: 24px;
  float: none;
  display: inline;
  display: inline-block;
}
.swatch-element label { padding: 10px; }
.swatch-element.color label {
  width: 24px;
  height: 24px;
  max-width: 24px;
  max-height: 24px;
  position: relative;
  text-transform: uppercase;
  line-height: 24px;
  white-space: nowrap;
  border-radius: 100%;
  padding: 0px;
  letter-spacing: 0;
  border: 0;
}
.swatch-element.color label::before {
  transition: all 0.3s ease-in-out;
  width: 30px;
  height: 30px;
  border: 1px solid $color-primary;
  position: absolute;
  border-radius: 100%;
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%) scale(0);
  z-index: -1;
}
.swatch--collection .swatch-element.color label {
  width: 18px;
  height: 18px;
  max-width: 18px;
  max-height: 18px;
  line-height: 18px;
}
.swatch--collection .swatch-element.color label::before {
  width: 24px;
  height: 24px;
}
.swatch-element.size label {
  position: relative;
  width: auto;
  height: auto;
  padding: 0px;
  border: 0px;
  line-height: 1.3;
  @media (min-width: $grid-medium) {
    font-size: 14px;
  }
}
.swatch-element.size label span {
  width: 14px;
  height: 14px;
  margin-bottom: -3px;
  display: inline;
  display: inline-block;
  position: relative;
  border-radius: 100%;
  border: 1px solid $color-primary;
}
.swatch-element.size label span::before {
  position: absolute;
  display: block;
  background-color: $white;
  width: 10px;
  height: 10px;
  border-radius: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  content: '';
  transition: background-color 0.2s ease;
}
/* Styling selected swatch */
/* Slightly raised */
.swatch.color-swatches input:checked + label::before, .swatch-element.color label:hover::before, .swatch-element.color.active label::before,  {
  transform: translate(-50%,-50%) scale(1);
}
.swatch.size-swatches input:checked + label span::before, .swatch-element.size.active label span::before {
  background-color: $color-primary;
}
/*
.swatch input:checked + label {
  -webkit-box-shadow:0px 1px 2px rgba(0,0,0,0.8);
  -moz-box-shadow:0px 1px 2px rgba(0,0,0,0.8);
  box-shadow:0px 1px 2px rgba(0,0,0,0.8);
  border-color:transparent;
}
*/
.swatch .swatch-element {
  float:left;
  -webkit-transform:translateZ(0); /* webkit flicker fix */
  -webkit-font-smoothing:antialiased; /* webkit text rendering fix */
  /* Spacing between buttons */
  margin:0px 10px 10px 0;
  /* To position the sold out graphic and tooltip */
  position:relative;
  cursor: pointer;
  @media (min-width: $grid-large) {
    margin: 0 14px 14px 0;
  }
  @media (max-width: $grid-medium-down) {
    float: none;
    display: inline;
    display: inline-block;
    margin: 0 5px 10px 0;
  }
}
