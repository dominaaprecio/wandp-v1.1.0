  float: left;
  //padding-left: $grid-gutter;
  padding-left: 20px;
  @media (min-width: 769px) {
    padding-left: 30px;
  }
  @media (min-width: 1024px) {
    padding-left: 40px;
  }
  width: 100%;

  &[class*='--push'] {
    position: relative;
  }
}

/*============================================================================
  Reversed grids allow you to structure your source in the opposite
  order to how your rendered layout will appear.
==============================================================================*/
.grid--rev {
  direction: rtl;
  text-align: left;

  > .grid__item {
    direction: ltr;
    text-align: left;
    float: right;
  }
}

.grid--full {
  margin-left: 0;
  > .grid__item {
    padding-left: 0;
  }
}

#more-products {
  .grid__item {
    padding-left: 0;
  }
}

.grid--2x-gutter {
  @media (min-width: $grid-large) {
    margin-left: -30px;
  }
  > .grid__item {
    @media (min-width: $grid-large) {
      padding-left: 60px;
    }
  }
}

.grid--flex {
  flex-wrap: wrap;
  > .grid__item {
    display: flex;
    position: relative;
    flex-direction: column;
  }
  &.grid--flex--center {
    > .grid__item {
      justify-content: center;
    }
  }
}

.grid--center {
  text-align: center;
  @media (min-width: $grid-medium) {
    margin: 0;
  }
  > .grid__item {
    @media (min-width: $grid-medium) {
      float: none;
      display: inline;
      display: inline-block;
      margin: 0 15px;
      padding: 0;
      &.slick-slide {
        padding: 0;
      }
    }
    @media (min-width: $grid-large) {
      margin: 0 20px;
    }
  }
