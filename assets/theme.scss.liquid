    .cart-item__info {
      display: table-cell;
      vertical-align: middle;
    }
    .cart-item__img {
      width: 80px;
      line-height: 0;
      padding-bottom: 80px;
      position: relative;
      overflow: hidden;
      img {
		position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        height: auto;
        transform: translateY(-50%);
      }
    }
    .cart-item__info {
      width: 66%;
      padding-left: 10px;
    }
  }
  .cart-item__qty,
  .cart-item__price {
    padding: 0 5px;
  }
  h5 {
    margin: 0;
    font-size: 15px;
  }
  h6 {
    font-weight: 300;
    margin: 4px 0 0 0;
  }
  .cart__qty {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: auto;
    padding: 5px 8px;
    border: 1px solid $flour;
    border-radius: 4px;
