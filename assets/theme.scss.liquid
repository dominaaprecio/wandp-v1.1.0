  @include clearfix();
  list-style: none;
  margin: 0;
  padding: 0;
  //margin-left: -$grid-gutter;
  margin-left: -20px;
  @media (min-width: 769px) {
    margin-left: -30px;
  }
  @media (min-width: 1024px) {
    margin-left: -40px;
  }
}

