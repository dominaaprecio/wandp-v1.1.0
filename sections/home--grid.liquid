    "name": "Home Grid Area",
    "settings": [
	  {
		"type": "checkbox",
		"id": "reverse",
		"label": "Flip the Grid",
		"default": false
	  },
      {
        "type": "color",
        "id": "grid_txt_color",
        "label": "Grid Text Color",
        "default": "#333334"
      },
	  {
        "id": "main_img",
        "type": "image_picker",
        "label": "Featured Image"
	  },
	  {
		"id": "main_headline",
		"type": "text",
		"label": "Featured Headline"
	  },
	  {
        "id": "main_txt",
        "type": "richtext",
        "label": "Left Column Text"
	  },
	  {
        "id": "main_cta1_txt",
        "type": "text",
        "label": "Featured CTA Text"
	  },
	  {
        "id": "main_cta1_url",
        "type": "url",
        "label": "Featured CTA Link"
	  },
	  {
        "id": "main_cta2_txt",
        "type": "text",
        "label": "2nd Featured CTA Text",
		"info": "Optional"
	  },
	  {
        "id": "main_cta2_url",
        "type": "url",
        "label": "2nd Featured CTA Link",
		    "info": "Optional"
	  },
	  {
        "id": "side_img1",
        "type": "image_picker",
        "label": "1st Side Image"
	  },
    {
        "id": "side_img1_url",
        "type": "url",
        "label": "1st Side Image Link",
        "info": "Optional"
	  },
	  {
        "id": "side_img2",
        "type": "image_picker",
        "label": "2nd Side Image"
	  },
    {
        "id": "side_img2_url",
        "type": "url",
        "label": "2nd Side Image Link",
        "info": "Optional"
	  }
	],
    "presets": [
      {
        "name": "Grid - 2 Column",
        "category": "Grid"
      }
    ]
  }
