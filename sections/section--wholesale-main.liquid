<div class="clear-footer">
  <section class="hero hero--blocks" id="hero-{{ section.id }}">
    <div class="grid grid--full">
      <div class="grid__item large-up--two-thirds one-whole hero-image" style="line-height: 0;" data-aos="fade">
        {% comment %}
      <img src="{{ section.settings.hero_img | img_url: '2880x', crop: 'center' }}">
        {% endcomment %}
        <img src="{{ section.settings.hero_img | img_url: '2880x', crop: 'center' }}">
      </div>
    </div>
    <div class="hero__text text-charcoal">
      <div class="gray-block" data-aos="fade-up" data-aos-delay="500" data-aos-once="true" data-aos-anchor=".hero-image">
        {% if section.settings.title != blank %}
          <h1>{{ section.settings.title }}</h1>
        {% else %}
          <h1>{{ page.title }}</h1>
        {% endif %}
        {% for link in linklists['wholesale-links'].links %}
          <p><a class="cta-arrow" href="{{ link.url }}">{{ link.title }}</a></p>
        {% endfor %}
      </div>
    </div>
  </section>
  <div class="wrap">
    <div class="grid">
      <div class="grid__item medium-up--two-thirds">
        <p>{{ section.settings.wholesale_description }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Wholesale Main",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      },

      {
        "id": "hero_img",
        "type": "image_picker",
        "label": "Hero Image"
      },

      {
        "id": "wholesale_description",
        "label": "Description",
        "type": "textarea"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Text Block",
        "settings": [
          {
            "id": "block_title",
            "type": "text",
            "label": "title"
          },
          {
            "id": "block_body",
            "type": "richtext",
            "label": "Content"
          },
          {
            "id": "block_image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "block_text_left",
            "type": "checkbox",
            "label": "Text Left?"
          }
        ]
      }
    ]
  }
{% endschema %}
