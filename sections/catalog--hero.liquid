<style>
  .catalog--hero{
    position: relative;
  }

  .catalog--hero h1{
    position: absolute;
    left: 60%;
    top: 40%;
    transform: translate( 0px, -50% );
  }

  .catalog--hero img{
    width: 100%;
    height: auto;
  }
</style>

<div class = "wrap">
  <div class = "catalog--hero">
    <img src = "{{ section.settings.hero_image | img_url: '3200x' }}"/>
    <h1>{{ section.settings.hero_title }}</h1>
  </div>\
</div>

{% schema %}
  {
  	"name": "Catalog Hero",
  	"settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
      },
      {
      	"type": "color",
      	"id": "hero_txt_color",
      	"label": "Hero Text Color",
      	"default": "#fff"
      },
      {
      	"type": "text",
      	"id": "hero_title",
      	"label": "Headline"
      }

  	]

  }
{% endschema %}
