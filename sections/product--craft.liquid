{% include 'breadcrumbs' %}
{% include 'product__hero' %}
{% include 'product__body' %}

{% schema %}
  {
    "name": "Craft Product Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      },
	  {
		"type": "header",
		"content": "Related Products"
	  },
      {
        "type": "checkbox",
        "id": "show_related_products",
        "label": "Show Related Products",
        "default": true
      },
      {
        "type": "text",
        "id": "related_products_title",
        "label": "Related Products title",
        "default": "You Might Also Like"
      }
    ],
    "blocks": [
	  {
		"type": "title",
		"name": "Section Title",
		"settings": [
          {
            "id": "title_text_align",
            "type": "select",
            "label": "Text Alignment",
            "options": [
              {
                "value": "text-center",
                "label": "Center"
              },
              {
                "value": "text-left",
                "label": "Left"
              },
              {
                "value": "text-right",
                "label": "Right"
              }
            ],
            "default": "text-center"
          },
          {
            "type": "text",
            "id": "title_headline",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "title_sub",
            "label": "Subheader",
			"info": "Optional"
          }
		]
	  },
      {
        "type": "video",
        "name": "Video",
		"limit": 1,
        "settings": [
          {
            "type": "checkbox",
            "id": "show_controls",
            "label": "Disable Autoplay & Show Controls",
            "default": false,
            "info": "Recommended for videos with sound or longer than 15-30 seconds."
          },
          {
            "type": "checkbox",
            "id": "override_video",
            "label": "Override Default Product Video",
			"default": false
          },
          {
            "id": "video_url",
            "type": "video_url",
            "label": "Video URL",
            "accept": ["vimeo"],
            "default": "https://vimeo.com/203509621",
			"info": "Use if overriding default product video"
          },
          {
            "type": "checkbox",
            "id": "disable_split",
            "label": "Disable Split Text",
			"default": false
          },
          {
            "type": "text",
            "id": "video_headline",
            "label": "Headline"
          },
          {
            "type": "richtext",
            "id": "video_body",
            "label": "Body"
          }
        ]
	  },
      {
        "type": "info-block",
        "name": "Info Block",
        "settings": [
          {
            "id": "info_title",
            "type": "text",
            "label": "Info Title"
          },
          {
            "id": "info_body",
            "type": "richtext",
            "label": "Info Text"
          },
          {
            "id": "info_image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "info_text_left",
            "type": "checkbox",
            "label": "Flip Text Left"
          }
		]
	  },
      {
        "type": "promo-block",
        "name": "Promo Block",
        "settings": [
          {
            "id": "visible_prodpromo",
            "type": "select",
            "label": "Default Visible Promo",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "right"
          },
          {
            "id": "prodpromo_left",
            "type": "image_picker",
            "label": "Promo - Left Image"
          },
          {
            "id": "prodpromo_left_headline",
            "type": "text",
            "label": "Promo - Left Headline"
          },
          {
            "id": "prodpromo_left_cta_url",
            "type": "url",
            "label": "Promo - Left CTA Link"
          },
          {
            "id": "prodpromo_left_cta",
            "type": "text",
            "label": "Promo - Left CTA Text"
          },
          {
            "id": "prodpromo_right",
            "type": "image_picker",
            "label": "Promo - Right Image"
          },
          {
            "id": "prodpromo_right_headline",
            "type": "text",
            "label": "Promo - Right Headline"
          },
          {
            "id": "prodpromo_right_cta_url",
            "type": "url",
            "label": "Promo - Right CTA Link"
          },
          {
            "id": "prodpromo_right_cta",
            "type": "text",
            "label": "Promo - Right CTA Text"
          }
        ]
	  }
	]
  }
{% endschema %}
