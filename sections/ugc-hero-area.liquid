<div class="hero hero--ugc" id="hero-{{ section.id }}">
  {% if section.settings.hero_type == 'hero--video' %}
  <div class="hero__video{% if section.settings.hide_video_on_mobile %} hide-mobile{% endif %}">
    <video width="16" height="9" preload playsinline muted>
      <source src="{{ section.settings.hero_video_url }}" type="video/mp4">
    </video>
  </div>
  {% endif %}
  <!--div class="hero__overlay"></div-->
  <div class="hero__wrap">
    <div class="hero__text text-center--mobile {{ section.settings.hero_txt_align }} {{ section.settings.hero_txt_align_mobile }}" data-aos="fade-up" data-aos-delay="1200" data-aos-duration="1100" data-aos-once="true" data-aos-anchor=".hero">
