      	"label": "Hero Text Color",
      	"default": "#fff"
      },
      {
        "type": "select",
        "id": "hero_txt_align",
        "label": "Text Alignment",
        "options": [
          {
            "value": "text-center--desktop",
            "label": "Center"
          },
          {
            "value": "text-left--desktop",
            "label": "Left"
          },
          {
            "value": "text-right--desktop",
            "label": "Right"
          }
        ],
        "default": "text-left--desktop"
      },
      {
        "type": "select",
        "id": "hero_txt_align_mobile",
        "label": "Mobile Text Alignment",
        "options": [
          {
            "value": "text-center--mobile",
            "label": "Center"
          },
          {
            "value": "text-left--mobile",
            "label": "Left"
          },
          {
            "value": "text-right--mobile",
            "label": "Right"
          }
        ],
        "default": "text-left--mobile"
      },
      {
      	"type": "text",
      	"id": "hero_headline",
      	"label": "Headline"
      },
      {
      	"type": "textarea",
      	"id": "hero_text",
      	"label": "Text (optional)"
      },
      {
      	"type": "text",
      	"id": "hero_cta1_txt",
      	"label": "First CTA Text"
      },
      {
      	"type": "url",
      	"id": "hero_cta1_url",
      	"label": "First CTA Link"
      },
      {
      	"type": "text",
      	"id": "hero_cta2_txt",
      	"label": "Second CTA Text"
      },
      {
      	"type": "url",
      	"id": "hero_cta2_url",
      	"label": "Second CTA Link"
      }
  	],
    "presets": [
      {
        "category": "Media",
        "name": "UGC Hero Area"
      }
    ]
  }
