<style type="text/css">
  #hero-{{ section.id }} {
    background: #5F7767;
    background: {{ section.settings.hero_bgcolor }};
    color: #fff;
    color: {{ section.settings.hero_txtcolor }};
    height: 100%;
  }
  #hero-{{ section.id }} .hero__wrap {
    width: 100%;
    max-width: 100%;
    flex-direction: column;
    padding: 100px 20px 40px 20px;
  }
  #hero-{{ section.id }} .hero__text {

  }
  #hero-{{ section.id }} .hero__text p {
    margin-bottom: 0;
  }
  #hero-{{ section.id }} .hero__text,
  #hero-{{ section.id }} .hero__ugc {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  .hero__ugc-grid {
    display: grid;
    grid-gap: 20px;
    grid-template-columns: 50fr 50fr;
    grid-template-rows: repeat(1, 20fr);
    grid-auto-flow: row;
    margin-top: 40px;
    grid-auto-rows: minmax(50fr, auto)
  }
  .hero__ugc-grid__item {
    grid-area: span 1 / span 1;
    position: relative;
    line-height: 0;
    overflow: hidden;
    min-width: 0;
    min-height: 0;
    display: flex;
  }
  .hero__ugc-grid__item.hero__ugc-grid__item--big {
    grid-area: span 2 / span 2;
    display: block;
  }
  .hero__ugc-grid__media {
    position: relative;
    width: 100%;
    height: auto;
    z-index: 1;
    display: flex;
  }
  .hero__ugc-grid__media img,
  .hero__ugc-grid__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 1;
  }
  .hero__ugc-grid__media a {
    position: absolute;
    z-index: 2;
    line-height: 1;
    bottom: 8px;
    left: 8px;
    font-size: 12px;
    font-weight: 700;
    color: #fff !important;
    display: inline-block;
    padding: 0;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
  }
  #hero-{{ section.id }} .hero__text__cta, .hero__text p {
    margin-top: 20px;
  }
  #hero-{{ section.id }} h1 {
    font-size: 1.5rem;
    max-width: 100%;
  }
  @media (min-width: 375px) {
    #hero-{{ section.id }} h1 {
      font-size: 1.8rem;
      max-width: 100%;
    }
  }
  @media (max-width: 768px) {
    .cta-arrow--big {
      font-size: 18px;
    }
  }
  @media (min-width: 769px) {
    #hero-{{ section.id }} .hero__wrap {
      padding: 100px 40px 60px 40px;
    }
    .hero__ugc-grid {
      margin-top: 50px;
    }
    #hero-{{ section.id }} .hero__text__cta {
      margin-top: 40px;
    }
    #hero-{{ section.id }} .hero__text p {
      margin-top: 20px;
    }
    #hero-{{ section.id }} h1 {
      font-size: 2rem;
      margin-top: 0;
    }
    #hero-{{ section.id }} .cta-arrow--big {
      font-size: 20px;
    }
  }
  @media (min-width: 1024px) {
    #hero-{{ section.id }} .hero__wrap {
      padding: 93px 30px 30px 30px;
      flex-direction: row;
    }
    #hero-{{ section.id }} .hero__text {
      max-width: 360px;
      width: 25%;
      padding-right: 50px;
    }
    #hero-{{ section.id }} .hero__ugc {
      flex-grow: 1;
      width: 75%;
    }
    .hero__ugc-grid {
      grid-gap: 1.5vw;
      grid-template-columns: repeat(5, 20fr);
      grid-template-rows: 50fr 50fr;
      grid-auto-flow: column;
      margin-top: 0;
    }
  }
  @media (min-width: 1140px) {
    #hero-{{ section.id }} h1 {
      font-size: 2.5rem;
    }
    #hero-{{ section.id }} .cta-arrow--big {
      font-size: 20px;
    }
  }
  #hero-{{ section.id }} a {
    color: {{ section.settings.hero_txtcolor }};
    border-color: {{ section.settings.hero_txtcolor }};
  }
  #hero-{{ section.id }} .btn-cta {
    color: {{ section.settings.hero_txtcolor }};
    border-color: {{ section.settings.hero_txtcolor }};
  }
</style>
