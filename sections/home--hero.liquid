<style type="text/css">
  #hero-{{ section.id }} {
    {% if section.settings.hero_type == 'hero--image' %}
    background: url('{{ section.settings.hero_img | img_url: '2880x' }}') no-repeat;
    background-position: {{ section.settings.hero_img_pos }};
    background-size: cover;
    {% endif %}
    color: {{ section.settings.hero_txt_color }};
    height: 380px;
  }
  @media (min-width: 375px) {
    #hero-{{ section.id }} {
      height: 480px;
    }
  }
  @media (min-width: 480px) {
    #hero-{{ section.id }} {
      height: 500px;
    }
  }
  #hero-{{ section.id }} a {
    color: {{ section.settings.hero_txt_color }};
    border-color: {{ section.settings.hero_txt_color }};
  }
  #hero-{{ section.id }} .btn-cta {
    color: {{ section.settings.hero_txt_color }};
    border-color: {{ section.settings.hero_txt_color }};
  }
</style>
<section class="hero {{ section.settings.hero_type }}" id="hero-{{ section.id }}">
  <div class="hero__overlay"></div>
  <div class="hero__wrap">
    <div class="hero__text" data-aos="fade-up" data-aos-delay="1000" data-aos-duration="1500">
      <h1>{{ section.settings.hero_headline }}</h1>
      {% if section.settings.hero_cta1_txt != blank %}
      <div class="hero__text__cta">
        <a class="cta-arrow cta-arrow--big" href="{{ section.settings.hero_cta1_url }}">{{ section.settings.hero_cta1_txt }}</a>
        {% if section.settings.hero_cta2_txt != blank %}
          <a class="cta-arrow cta-arrow--big" href="{{ section.settings.hero_cta2_url }}">{{ section.settings.hero_cta2_txt }}</a>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
  	"name": "Home Hero Area",
  	"settings": [
      {
  		"type": "select",
  		"id": "hero_type",
  		"label": "Type of Hero Area",
        "options": [
          {
        	"value": "hero--image",
        	"label": "Image"
          },
          {
        	"value": "hero--video",
        	"label": "Video"
