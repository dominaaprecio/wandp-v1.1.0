      },
      {
      	"type": "text",
      	"id": "hero_cta2_txt",
      	"label": "Second CTA Text"
      },
      {
      	"type": "url",
      	"id": "hero_cta2_url",
      	"label": "Second CTA Link"
      }
  	],
    "presets": [
      {
        "category": "Media",
        "name": "Hero Area"
      }
    ]
  }
{% endschema %}

