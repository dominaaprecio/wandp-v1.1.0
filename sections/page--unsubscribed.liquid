<style type="text/css">
  .full-page {
    width: 100%;
    height: 100vh;
    min-height: 500px;
    padding: 50px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  @media (min-width: 769px) {
    .full-page {
      padding: 80px;
      min-height: 640px;
    }
  }
  #full-page-{{ section.id }} {
    background: url('{{ section.settings.bg_img | img_url: '2880x' }}') no-repeat;
    background-position: {{ section.settings.bg_img_pos }};
    background-size: cover;
    color: {{ section.settings.content_color }};
  }
  .full-page__content {
    display: inline-block;
    width: 100%;
    max-width: 600px;
    background-color: {{ section.settings.content_bgcolor }};
    color: {{ section.settings.content_color }};
    margin: 0px auto;
    padding: 20px;
  }
  @media (min-width: 769px) {
    .full-page__content {
      padding: 40px;
    }
  }
  .full-page__content form {
    margin-top: 20px;
  }
  .full-page__content form button {
    /*margin-top: 10px;*/
  }
  .full-page__content input {
    width: 100%;
    border: 0px;
    margin-bottom: 20px;
    background-color: #f1f2f2;
  }
  @media (min-width: 769px) {
    .full-page__content input {
      margin-bottom: 20px;
    }
  }
  .full-page__content h1 {

  }
  .full-page__content p {
    margin: 0px;
  }
  .full-page__content p + p {
    margin-top: 20px;
  }
  .full-page__content .cta-arrow {
    color: {{ section.settings.content_color }};
  }
</style>
<section id="full-page-{{ section.id }}" class="full-page" data-aos="fade" data-aos-delay="1000">
  <div class="full-page__content text-center" data-aos="fade-up" data-aos-delay="1000" data-aos-duration="1500">
    {% if section.settings.content_title != blank %}
      <h1>{{ section.settings.content_title }}</h1>
    {% endif %}
    {{ section.settings.content_text }}
    {% if section.settings.content_cta != blank %}
      <p><a class="cta-arrow" href="{{ section.settings.content_cta_url }}">{{ section.settings.content_cta }}</a></p>
    {% endif %}
  </div>
</section>


{% schema %}
  {
    "name": "Unsubscribed",
    "settings": [
      {
        "id": "bg_img",
        "type": "image_picker",
        "label": "Background Image"
      },
      {
        "type": "select",
        "id": "bg_img_pos",
        "label": "Background Image Position",
        "options": [
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "top left",
            "label": "Top Left"
          },
          {
            "value": "top center",
            "label": "Top Center"
          },
          {
            "value": "top right",
            "label": "Top Right"
          },
          {
            "value": "bottom left",
            "label": "Bottom Left"
          },
          {
            "value": "bottom center",
            "label": "Bottom Center"
          },
          {
            "value": "bottom right",
            "label": "Bottom Right"
          }
        ],
        "default": "center"
      },
      {
        "id": "content_bgcolor",
        "type": "color",
        "label": "Content Background Color"
      },
      {
        "id": "content_color",
        "type": "color",
        "label": "Content Text Color"
      },
      {
        "id": "content_title",
        "type": "text",
        "label": "Content Title"
      },
      {
        "id": "content_text",
        "type": "richtext",
        "label": "Content Text"
      },
      {
        "id": "content_cta",
        "type": "text",
        "label": "Content CTA"
      },
      {
        "id": "content_cta_url",
        "type": "url",
        "label": "Content CTA Link"
      }
    ]
  }
{% endschema %}

