<div class = "grid">
  <div class = "grid__item medium-up--one-whole slick-carousel">
    {% for block in section.blocks %}
    <img src = "{{ block.settings.image | img_url: '2400x' }}"/>
    {% endfor %}
  </div>
</div>


<script>
  $( document ).ready( function(){
    $(".slick-carousel").slick({
      arrows: true,
      slidesToShow: 3,
      responsive: [
        {
          breakpoint: 767,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            infinite: true,
            dots: true,
            arrows: false
          }
        }
      ],
      nextArrow: "<div class = 'carousel-next carousel-arrow'>></div>",
      prevArrow: "<div class = 'carousel-prev carousel-arrow'><</div>"
    });
  });
</script>


{% schema %}
  {
    "name": "Affiliate Carousel",
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}
