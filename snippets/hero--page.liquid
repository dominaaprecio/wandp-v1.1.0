<section class="hero hero--collection hero--page">
  <div class="grid grid--full">
    <div class="grid__item large-up--two-thirds one-whole hero-image" style="line-height: 0;" data-aos="fade">
      {% comment %}
	  <img src="{{ section.settings.hero_img | img_url: '2880x1100', crop: 'center' }}">
      {% endcomment %}
      <img src="{{ collection.image | img_url: '2880x1000', crop: 'center' }}">
    </div>
  </div>
  <div class="hero__text text-charcoal">
    <div class="gray-block" data-aos="fade-up" data-aos-delay="500" data-aos-once="true" data-aos-anchor=".hero-image">
      {% if section.settings.hero_headline != blank %}
        <h1>{{ section.settings.hero_headline }}</h1>
      {% else %}
        <h1>{{ page.title }}</h1>
      {% endif %}
    </div>
  </div>
</section>