<div class="wrap">
  <nav class="breadcrumb" role="navigation" aria-label="breadcrumbs" data-aos-duration="1500" data-aos="fade" data-aos-delay="800">
    {% if template contains 'collection' or template contains 'product' %}
    <a href="/collections/all" title="Home">Shop</a>
    {% elsif template contains 'article' %}
    {% else %}
    <a href="/" title="Home">W&amp;P</a>
    {% endif %}
    {% if template contains 'page' %}
      <span aria-hidden="true">&gt;</span>
      <span>{{ page.title }}</span>
    {% elsif template contains 'product' %}
      {% if collection.url %}
        <span aria-hidden="true">&gt;</span>
        {{ collection.title | link_to: collection.url }}
      {% else %}
        {% if product.vendor == 'Carry On' %}
          <span aria-hidden="true">&gt;</span>
          <a href="/collections/craft">Craft</a>
        {% else %}
          {%- assign theVendor = product.vendor | handleize -%}
          {% for collection in product.collections %}
            {% if collection.handle == theVendor %}
              <span aria-hidden="true">&gt;</span>
              <a href="/collections/{{ collection.handle }}">{{ collection.title }}</a>
            {% endif %}
          {% endfor %}
        {% endif %}
      {% endif %}
      <span aria-hidden="true">&gt;</span>
      <span>{{ product.title }}</span>
    {% elsif template contains 'collection' and collection.handle %}
      <span aria-hidden="true">&gt;</span>
      <a href="/collections">Collections</a>
      <span aria-hidden="true">&gt;</span>
      {% if current_tags %}
        {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
        {{ collection.title | link_to: url }}
        <span aria-hidden="true">&gt;</span>
        <span>{{ current_tags | join: " + " }}</span>
      {% else %}
        {% if template contains 'dovetail-sub' %}
        <a href="/collections/dovetail">Dovetail</a>
        <span aria-hidden="true">&gt;</span>
        {% elsif template contains 'host-sub' %}
        <a href="/collections/host">Host</a>
        <span aria-hidden="true">&gt;</span>
        {% endif %}
        <span>{{ collection.title }}</span>
      {% endif %}
    {% elsif template == 'blog' %}
      <span aria-hidden="true">&gt;</span>
      {% if current_tags %}
        {{ blog.title | link_to: blog.url }}
        <span aria-hidden="true">&gt;</span>
        <span>{{ current_tags | join: " + " }}</span>
      {% else %}
      <span>{{ blog.title }}</span>
      {% endif %}
    {% elsif template contains 'article' %}
      {% comment %}<span aria-hidden="true">&gt;</span>
      {% endcomment %}{{ blog.title | link_to: blog.url }}
      <span aria-hidden="true">&gt;</span>
      <span>{{ article.title }}</span>
    {% else %}
     <span aria-hidden="true">&gt;</span>
     <span>{{ page_title }}</span>
    {% endif %}
  </nav>
</div>
