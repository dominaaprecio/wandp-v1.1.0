<script>
  document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

  window.theme = {
    strings: {
      addToCart: {{ 'products.product.add_to_cart' | t | json }},
      soldOut: {{ 'products.product.sold_out' | t | json }},
      unavailable: {{ 'products.product.unavailable' | t | json }}
    },
    moneyFormat: {{ shop.money_format | json }}
  };

  var cartInit = {{ cart | json }};
</script>

{% if template.directory == 'customers' %}
<script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer="defer"></script>
{% endif %}

<script src="{{ 'vendor.js' | asset_url }}" {% comment %}defer="defer"{% endcomment %}></script>

<script src="{{ 'option_selection.js' | shopify_asset_url }}" {% comment %}defer="defer"{% endcomment %}></script>

<script src="{{ 'theme.js' | asset_url }}" {% comment %}defer="defer"{% endcomment %}></script>

{% if template contains 'product' %}
  <script src="{{ 'pdp.js' | asset_url }}" {% comment %}defer="defer"{% endcomment %}></script>
{% endif %}


{% if template contains 'collection' %}
  <script src="{{ 'collection.js' | asset_url }}" {% comment %}defer="defer"{% endcomment %}></script>
{% endif %}
