<style type="text/css">
  .full-page {
    width: 100%;
    height: 100vh;
    min-height: 500px;
    padding: 50px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  @media (min-width: 769px) {
    .full-page {
      padding: 80px;
    }
  }
  #full-page-{{ section.id }} {
    background: url('{{ section.settings.bg_img | img_url: '2880x' }}') no-repeat;
    background-position: {{ section.settings.bg_img_pos }};
    background-size: cover;
    color: {{ section.settings.hero_txt_color }};
  }
  .full-page__content {
    display: inline-block;
    width: 100%;
    max-width: 600px;
    background-color: {{ section.settings.content_bgcolor }};
    color: {{ section.settings.content_color }};
    margin: 0px auto;
    padding: 20px;
  }
  .full-page__content h1 {

  }
  .full-page__content p {

  }
  .full-page__content .cta-arrow {
    color: {{ section.settings.content_color }};
  }
</style>
<section id="full-page-{{ section.id }}" class="full-page" data-aos="fade" data-aos-delay="1000">
  <div class="full-page__content" data-aos="fade-up" data-aos-delay="1000" data-aos-duration="1500">
    {% if section.settings.content_title != blank %}
      <h1>{{ section.settings.content_title }}</h1>
    {% endif %}
    {{ section.settings.content_text }}
    {% if section.settings.content_cta != blank %}
      <a class="cta-arrow" href="{{ section.settings.content_cta_url }}">
        {{ section.settings.cta }}
      </a>
    {% endif %}
  </div>
</section>
