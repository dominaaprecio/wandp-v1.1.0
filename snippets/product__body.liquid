{% unless product.vendor == 'Porter' %}
{% if section.settings.show_related_products %}
<div class="product__related">
  <div class="wrap wrap--max">
    <h2 class="text-center">{{ section.settings.related_products_title }}</h2>
  </div>
  {% include 'cross-sell-custom' %}
</div>
{% endif %}
{% endunless %}
{% comment %}
{% if product.title contains 'Porter Bowl' or product.title contains 'LUNCH! Set' %}
  {% include 'porter-pay-it-forward' %}
{% endif %}
{% endcomment %}
{% for block in section.blocks %}
  {% if block.type == 'title' %}
	<div class="product__title-block" data-aos="fade-up">
      <div class="wrap wrap--product {{ block.settings.title_text_align }}">
        <h2 class="weight800">{{ block.settings.title_headline }}</h2>
        {% if block.settings.title_sub != blank %}
        <h4>{{ block.settings.title_sub }}</h4>
        {% endif %}
      </div>
	</div>
  {% elsif block.type == 'video' %}
	{% if block.settings.override_video %}
	  {% if block.settings.video_url != blank %}
		<div class="product__video" data-aos="fade">
          <div class="wrap wrap--product">
            <div class="vimeo"><iframe src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?color=fbbd97&title=0&byline=0&portrait=0{% unless block.settings.show_controls %}&background=1{% endunless %}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></div>
            <script src="https://player.vimeo.com/api/player.js"></script>
            {% if block.settings.disable_split %}
              {% if block.settings.video_headline != blank %}
                <h2 class="weight800">{{ block.settings.video_headline }}</h2>
              {% endif %}
              {% if block.settings.video_body != blank %}
                {{ block.settings.video_body }}
              {% endif %}
            {% else %}
              {% if block.settings.video_headline != blank %}
                <div class="split-text-block">
                  <div class="split-text split-text--left">
                    <!-- Our <span>Mission</span> -->
                    <h2 class="weight800">{{ block.settings.video_headline }}</h2>
                  </div>
                  <div class="split-text split-text--right">
                    <!-- To create products that inspire your daily interactions with food and drink in ways you never imagined possible. -->
                    {{ block.settings.video_body }}
                  </div>
                </div>
              {% endif %}
            {% endif %}
          </div>
		</div>
	  {% endif %}
	{% else %}
      {% assign video_count = 0 %}
      {% for tag in product.tags %}
        {% if tag contains "Vimeo" %}
          {% assign video_count = video_count | plus: 1 %}
          {% capture video_url %}{{ tag | remove: "Vimeo: " }}{% endcapture %}
        {% endif %}
      {% endfor %}
      {% comment %}<div style="display:none">{{ video_count }}</div>{% endcomment %}
      {% if video_count != 0 %}
      <div class="product__video" data-aos="fade">
        <div class="wrap wrap--vimeo">
          {% if video_count == 1 %}
            <div class="vimeo"><iframe src="https://player.vimeo.com/video/{{ video_url }}?color=fbbd97&title=0&byline=0&portrait=0{% unless block.settings.show_controls %}&background=1{% endunless %} frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></div>
            <script src="https://player.vimeo.com/api/player.js"></script>
          {% else %}
            {% for tag in product.tags %}
              {% if tag contains "Vimeo" %}
                <div class="vimeo"><iframe src="https://player.vimeo.com/video/{{ tag | remove: "Vimeo: " }}?color=fbbd97&title=0&byline=0&portrait=0{% unless block.settings.show_controls %}&background=1{% endunless %}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></div>
              {% endif %}
            {% endfor %}
            <script src="https://player.vimeo.com/api/player.js"></script>
          {% endif %}
          {% if block.settings.disable_split %}
            {% if block.settings.video_headline != blank %}
              <h2 class="weight800">{{ block.settings.video_headline }}</h2>
            {% endif %}
            {% if block.settings.video_body != blank %}
              {{ block.settings.video_body }}
            {% endif %}
          {% else %}
            {% if block.settings.video_headline != blank %}
              <div class="split-text-block">
                <div class="split-text split-text--left">
                  <!-- Our <span>Mission</span> -->
                  <h2 class="weight800">{{ block.settings.video_headline }}</h2>
                </div>
                <div class="split-text split-text--right">
                  <!-- To create products that inspire your daily interactions with food and drink in ways you never imagined possible. -->
                  {{ block.settings.video_body }}
                </div>
              </div>
            {% endif %}
          {% endif %}
        </div>
      </div>
      {% else %}
        {% if block.settings.video_url != blank %}
        <div class="product__video" data-aos="fade">
          <div class="wrap wrap--vimeo">
            <div class="vimeo"><iframe src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?color=fbbd97&title=0&byline=0&portrait=0&background=1" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></div>
            <script src="https://player.vimeo.com/api/player.js"></script>
            {% if block.settings.disable_split %}
              {% if block.settings.video_headline != blank %}
                <h2 class="weight800">{{ block.settings.video_headline }}</h2>
              {% endif %}
              {% if block.settings.video_body != blank %}
                {{ block.settings.video_body }}
              {% endif %}
            {% else %}
              {% if block.settings.video_headline != blank %}
                <div class="split-text-block">
                  <div class="split-text split-text--left">
                    <!-- Our <span>Mission</span> -->
                    <h2 class="weight800">{{ block.settings.video_headline }}</h2>
                  </div>
                  <div class="split-text split-text--right">
                    <!-- To create products that inspire your daily interactions with food and drink in ways you never imagined possible. -->
                    {{ block.settings.video_body }}
                  </div>
                </div>
              {% endif %}
            {% endif %}
          </div>
        </div>
        {% endif %}
      {% endif %}
	{% endif %}
  {% elsif block.type == 'info-block' %}
	<div class="product__grid product__grid--text">
      <div class="wrap wrap--product">
        {% if block.settings.info_text_left %}
          <div class="info-block info-block--flip grid grid--full">
            <div class="grid__item medium-up--one-third" data-aos="fade-left">
              <img srcset="{{ block.settings.info_image | img_url: '1000x1250' }} 2x, {{ block.settings.info_image | img_url: '640x800' }} 1x" src="{{ block.settings.info_image | img_url: '640x800' }}">
            </div>
            <div class="grid__item medium-up--two-thirds info-block__wrap" data-aos="fade-right">
              <div class="info-block__text">
                <div class="info info--left">
                  <h2>{{ block.settings.info_title }}</h2>
                  {{ block.settings.info_body }}
                </div>
              </div>
            </div>
          </div>
        {% else %}
          <div class="info-block grid grid--full">
            <div class="grid__item medium-up--one-third" data-aos="fade-right">
              <img srcset="{{ block.settings.info_image | img_url: '1000x1250' }} 2x, {{ block.settings.info_image | img_url: '640x800' }} 1x" src="{{ block.settings.info_image | img_url: '640x800' }}">
            </div>
            <div class="grid__item medium-up--two-thirds info-block__wrap" data-aos="fade-left">
              <div class="info-block__text">
                <div class="info info--right">
                  <h2>{{block.settings.info_title}}</h2>
                  {{ block.settings.info_body }}
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>
	</div>
  {% elsif block.type == 'promo-block' %}
	<div class="product__promo" data-aos="fade" id="promo-{{ block.id }}" >
      <div class="wrap wrap--product">
        <div class="grid grid--uniform">
          <div class="grid__item medium-up--one-half">
            <div class="item">
              <style type="text/css">
                #left-{{ block.id }} {
                  background: url('{{ block.settings.prodpromo_left | img_url: '630x788', crop: 'center' }}') no-repeat;
                }
                @media
                only screen and (-webkit-min-device-pixel-ratio: 2),
                only screen and (   min--moz-device-pixel-ratio: 2),
                only screen and (     -o-min-device-pixel-ratio: 2/1),
                only screen and (        min-device-pixel-ratio: 2),
                only screen and (                min-resolution: 192dpi),
                only screen and (                min-resolution: 2dppx) {
                  #left-{{ block.id }} {
                    background: url('{{ block.settings.prodpromo_left | img_url: '1200x1500', crop: 'center' }}') no-repeat;
                  }
                }
              </style>
              <div id="left-{{ block.id }}" class="item__image"></div>
              <div class="item__wrap" data-aos="fade" data-aos-duration="1500" data-aos-anchor="#promo-{{ block.id }}" data-aos-anchor-placement="top-center">
                <div class="item__text wrapper text-center" data-aos-delay="200" data-aos="fade-up">
                  <h2 class="weight800">{{ block.settings.prodpromo_left_headline }}</h2>
                  <ul class="inline-list text-center">
                    <li>
                      <a class="cta-arrow" href="{{ block.settings.prodpromo_left_cta_url }}">{{ block.settings.prodpromo_left_cta }}</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="grid__item medium-up--one-half">
            <div class="item">
              <style type="text/css">
                #right-{{ block.id }} {
                  background: url('{{ block.settings.prodpromo_right | img_url: '630x788', crop: 'center' }}') no-repeat;
                }
                @media
                only screen and (-webkit-min-device-pixel-ratio: 2),
                only screen and (   min--moz-device-pixel-ratio: 2),
                only screen and (     -o-min-device-pixel-ratio: 2/1),
                only screen and (        min-device-pixel-ratio: 2),
                only screen and (                min-resolution: 192dpi),
                only screen and (                min-resolution: 2dppx) {
                  #right-{{ block.id }} {
                    background: url('{{ block.settings.prodpromo_right | img_url: '1200x1500', crop: 'center' }}') no-repeat;
                  }
                }
              </style>
              <div class="item__image" id="right-{{ block.id }}"></div>
              <div class="item__wrap" data-aos="fade" data-aos-duration="1500" data-aos-anchor="#promo-{{ block.id }}" data-aos-anchor-placement="top-center" data-aos-delay="500">
                <div class="item__text wrapper text-center" data-aos-delay="700" data-aos="fade-up">
                  <h2 class="weight800">{{ block.settings.prodpromo_right_headline }}</h2>
                  <ul class="inline-list text-center">
                    <li>
                      <a class="cta-arrow" href="{{ block.settings.prodpromo_right_cta_url }}">{{ block.settings.prodpromo_right_cta }}</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
	</div>
  {% endif %}
{% endfor %}
