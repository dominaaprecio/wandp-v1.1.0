              .addClass('disabled')
              .text($("#product-select option:selected").data("cta"));
            $(".product__status__text").text($("#product-select option:selected").data("status"));
            $(".status").addClass('hidden');
            $("#out-of-stock").removeClass('hidden');
            $(".product__status__text").text($("#product-select option:selected").data("status"));
            $(".product__notify-me").slideDown('slow');
          } else if($("#product-select option:selected").attr("data-availability") == "Coming Soon") {
            $("button[data-add-to-cart]")
              .attr("disabled", "disabled")
              .addClass('disabled')
              .text($("#product-select option:selected").data("cta"));
            $(".product__status__text").text($("#product-select option:selected").data("status"));
            $(".status").addClass('hidden');
            $("#waiting-list").removeClass('hidden');
            $(".product__notify-me").slideDown('slow');
          }
          {% if notifyMe %}
          var prodName = $("#product-select option:selected").data("product");
          var prodVariant = $("#product-select option:selected").data("variant");
          var prodSku = $("#product-select option:selected").data("sku");
          // console.log('product name is: '+prodName);
          // console.log('product SKU is: '+prodSku);
          if (prodVariant == 'Default Variant') {
            $("#bis-product").val(prodName);
          } else {
            $("#bis-product").val(prodName+' - '+prodVariant)
          }
          $("#bis-sku").val(prodSku);
          {% endif %}
        });
      {% endif %}

    }
    $(document).ready(pageLoad);
    $(document).on("shopify:section:load", pageLoad);

